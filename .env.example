# API Configuration
# Update these values according to your backend API

# Development API URL (when running locally)
VITE_API_URL=http://localhost:3001/api

# Production API URL (when deployed)
# VITE_API_URL=https://your-api-domain.com/api

# API Timeout (in milliseconds)
VITE_API_TIMEOUT=30000

# Application Title
VITE_APP_TITLE=HRMS Solution

# Application Version
VITE_APP_VERSION=1.0.0

# Debug Mode
VITE_DEBUG=true

# Authentication Token Storage Key
VITE_TOKEN_KEY=authToken

# Refresh Token Storage Key
VITE_REFRESH_TOKEN_KEY=refreshToken

# Maximum retry attempts for failed API calls
VITE_MAX_RETRY_ATTEMPTS=3

# Enable/Disable API request logging
VITE_ENABLE_API_LOGGING=true
